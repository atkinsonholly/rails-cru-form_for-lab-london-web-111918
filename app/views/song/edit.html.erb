<h3>Update Song</h3>

<%= form_for(@song) do |f| %>
  <label>Song name:</label><br>
  <%= f.text_field :song[:name] %><br>

  <label>Song artist</label><br>
  <%= f.text_field :song[:artist_id] %><br>

  <label>Song genre</label><br>
  <%= f.text_field :song[:genre_id] %><br>

  <%= f.submit %>
<% end %>
